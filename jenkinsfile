pipeline 
{
    agent
        {
            kubernetes 
            {
                defaultContainer 'jnlp'
                yamlFile 'agentpod.yaml'
            }
        }
    environment
        {
            DOCKERHUB_CREDENTIALS=credentials('abhishekknwdocker_id')
    }
  stages {
    stage('Cloning Git') {
      steps {
         git url: 'https://github.com/adminlogin47/hellow-world-python.git',
            credentialsId: 'adminlogin'
            git branch: 'main',   
              }
    }
    stage('Build') {
       steps {
         sh 'npm install'
       }
    }
    stage('Test') {
      steps {
        sh 'npm test'
      }
    }
  }
}
